<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pasuke.Views.SchedulePage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             NavigationPage.HasNavigationBar="False"
             xmlns:behaviors="clr-namespace:Xamarin.Forms.BehaviorsPack;assembly=Xamarin.Forms.BehaviorsPack"
             Title="シフト予定"
             Icon="Calender.png">
    
    <StackLayout Padding="15,0,15,0">
        <Label Text="{Binding Path=Info}"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <StackLayout Orientation="Horizontal">
            <!--<DatePicker Format="MM"
                        Scale="1.5"
                        Date="{Binding SortDate}"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="Center" />
            <Button Text="ソート"
                    HorizontalOptions="CenterAndExpand"
                    Command="{Binding Sort}"/>-->
            <Button Text="削除"
                    HorizontalOptions="CenterAndExpand"
                    Command="{Binding Delete}"
                    IsEnabled="{Binding Enbale}"/>
        </StackLayout>
     <ListView ItemsSource="{Binding Path = ListView}">
            <ListView.Behaviors>
                <behaviors:EventToCommandBehavior
                               EventName="ItemTapped"
                               EventArgsPropertyPath="Item"
                               Command="{Binding SelectedCommand}"/>
            </ListView.Behaviors>
            <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid 
                              Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.4*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                                
                            <Label Grid.Column="0"
                                   Text="{Binding Date}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HeightRequest="25"
                                   TextColor="Black"/>
                            <Label Grid.Column="1"
                                   Text="{Binding StartDate}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HeightRequest="25"
                                   TextColor="Black"/>

                            <Label Text="～"
                                   Grid.Column="2"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center"/>

                            <Label Grid.Column="3"
                                   Text="{Binding EndDate}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HeightRequest="25"
                                   TextColor="Black"/>
                        </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
    </StackLayout>
</ContentPage>